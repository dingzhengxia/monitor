    "trend_ema_long": {
      "fast": 26,
      "medium": 50,
      "long": 120
    },
    "ema_cross": {
      "enabled": true,
      "period": 120,
      "volume_confirm": true,
      "exempt_static_on_volume": true,
      "volume_multiplier": 2,
      "atr_period": 14,
      "atr_multiplier": 1,
      "exclude_timeframes": []
    },
    "kdj_cross": {
      "enabled": true,
      "fast_k": 9,
      "slow_k": 3,
      "slow_d": 3,
      "volume_confirm": true,
      "exempt_static_on_volume": false,
      "volume_multiplier": 2,
      "exclude_timeframes": [
        "1d"
